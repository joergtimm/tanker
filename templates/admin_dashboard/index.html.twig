{% extends 'admin/base.html.twig' %}

{% block title %}Admin Dashboard{% endblock %}

{% block admin_content %}
<div class="mb-6">
    <h1 class="text-2xl font-bold text-gray-800">Dashboard Overview</h1>
    <p class="text-gray-600">Willkommen im Administrationsbereich von NIG Tanker.</p>
</div>

<div class="grid grid-cols-1 md:grid-cols-3 gap-6">
    <div class="bg-white p-6 rounded-lg shadow-md border-l-4 border-blue-600">
        <h3 class="text-sm font-semibold text-gray-500 uppercase tracking-wider">Benutzer</h3>
        <p class="text-3xl font-bold text-gray-800 mt-2">{{ user_count }}</p>
        <a href="{{ path('admin_user_index') }}" class="text-blue-600 hover:text-blue-800 text-sm font-medium mt-4 inline-block">Verwalten →</a>
    </div>

    <!-- Placeholder for other stats -->
    <div class="bg-white p-6 rounded-lg shadow-md border-l-4 border-green-600 opacity-50">
        <h3 class="text-sm font-semibold text-gray-500 uppercase tracking-wider">Stationen</h3>
        <p class="text-3xl font-bold text-gray-800 mt-2">-</p>
        <span class="text-gray-400 text-sm font-medium mt-4 inline-block">Demnächst</span>
    </div>

    <div class="bg-white p-6 rounded-lg shadow-md border-l-4 border-yellow-600 opacity-50">
        <h3 class="text-sm font-semibold text-gray-500 uppercase tracking-wider">Favoriten</h3>
        <p class="text-3xl font-bold text-gray-800 mt-2">-</p>
        <span class="text-gray-400 text-sm font-medium mt-4 inline-block">Demnächst</span>
    </div>
</div>
{% endblock %}
