{% extends 'base.html.twig' %}

{% block title %}Meine Favoriten{% endblock %}

{% block body %}
<div class="min-h-screen bg-gray-50 py-12">
    <div class="container mx-auto px-4 max-w-6xl">
        <header class="mb-12">
            <h1 class="text-4xl md:text-5xl font-black text-gray-900 tracking-tight mb-4">Meine Favoriten</h1>
            <p class="text-lg text-gray-600 font-medium">Ihre persönlich gespeicherten Tankstellen.</p>
        </header>

        <div class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-3 gap-6">
            {% for station in stations %}
                <div class="group bg-white rounded-3xl shadow-sm hover:shadow-xl transition-all duration-300 border border-gray-100 overflow-hidden flex flex-col">
                    <div class="p-6 flex-grow">
                        <div class="flex justify-between items-start mb-4">
                            <div class="flex flex-col gap-2">
                                <span class="inline-block px-3 py-1 rounded-lg bg-gray-50 text-gray-500 text-[10px] font-black uppercase tracking-widest border border-gray-100">
                                    {{ station.brand|default('Tankstelle') }}
                                </span>
                                <button
                                    data-favorite-toggle="{{ path('app_favorite_toggle', {uuid: station.uuid}) }}"
                                    class="favorite-btn inline-flex items-center justify-center p-2 rounded-xl transition-all text-yellow-400 bg-yellow-50"
                                    title="Von Favoriten entfernen"
                                >
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.54 1.118l-3.976-2.888a1 1 0 00-1.175 0l-3.976 2.888c-.784.57-1.838-.197-1.539-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z" />
                                    </svg>
                                </button>
                            </div>
                            <div class="flex items-center gap-2">
                                {% if station.isOpen %}
                                    <span class="w-2 h-2 rounded-full bg-green-500"></span>
                                {% else %}
                                    <span class="w-2 h-2 rounded-full bg-red-500"></span>
                                {% endif %}
                            </div>
                        </div>

                        <h2 class="text-xl font-bold text-gray-900 mb-2 group-hover:text-blue-600 transition-colors">
                            <a href="{{ path('app_station_detail', {'uuid': station.uuid}) }}">
                                {{ station.name }}
                            </a>
                        </h2>

                        <p class="text-sm text-gray-500 mb-6 line-clamp-2">
                            {{ station.street }} {{ station.houseNumber }}, {{ station.postCode }} {{ station.place }}
                        </p>
                    </div>

                    <a href="{{ path('app_station_detail', {'uuid': station.uuid}) }}" class="block w-full py-4 bg-gray-50 text-center text-sm font-bold text-gray-600 hover:bg-blue-600 hover:text-white transition-all border-t border-gray-100 uppercase tracking-widest">
                        Details ansehen
                    </a>
                </div>
            {% else %}
                <div class="col-span-full py-20 text-center">
                    <div class="inline-flex items-center justify-center w-20 h-20 rounded-full bg-gray-100 text-gray-400 mb-4 text-3xl">⭐</div>
                    <h3 class="text-xl font-bold text-gray-900 mb-2">Noch keine Favoriten</h3>
                    <p class="text-gray-500">Markieren Sie Tankstellen als Favoriten, um sie hier schnell wiederzufinden.</p>
                    <a href="{{ path('app_home') }}" class="inline-block mt-6 px-6 py-3 bg-blue-600 text-white rounded-2xl font-bold hover:bg-blue-700 transition-all">Zur Suche</a>
                </div>
            {% endfor %}
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            document.querySelectorAll('.favorite-btn').forEach(btn => {
                btn.addEventListener('click', async (e) => {
                    e.preventDefault();
                    const url = btn.dataset.favoriteToggle;

                    try {
                        const response = await fetch(url, {
                            method: 'POST',
                            headers: {
                                'X-Requested-With': 'XMLHttpRequest'
                            }
                        });

                        if (response.ok) {
                            const data = await response.json();
                            if (!data.isFavorite) {
                                // In the list view, we might want to remove the element or just update the UI
                                // For simplicity, we refresh the page if it's the favorites list
                                window.location.reload();
                            }
                        }
                    } catch (error) {
                        console.error('Error toggling favorite:', error);
                    }
                });
            });
        });
    </script>
{% endblock %}
