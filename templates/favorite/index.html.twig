{% extends 'base.html.twig' %}

{% block title %}Meine Favoriten{% endblock %}

{% block body %}
<div class="py-12 md:py-20 bg-slate-50">
    <div class="container mx-auto px-4 max-w-7xl">
        <header class="mb-12 md:mb-16">
            <h1 class="text-4xl md:text-6xl font-black text-slate-900 tracking-tight mb-6">Meine <span class="text-blue-600">Favoriten.</span></h1>
            <p class="text-lg md:text-xl text-slate-500 font-medium max-w-2xl leading-relaxed">Ihre persönlich gespeicherten Tankstellen auf einen Blick.</p>
        </header>

        <div class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-3 gap-8">
            {% for station in stations %}
                <div class="group bg-white rounded-[2.5rem] shadow-sm hover:shadow-2xl hover:-translate-y-2 transition-all duration-500 border border-slate-100 overflow-hidden flex flex-col">
                    <div class="p-8 flex-grow">
                        <div class="flex justify-between items-start mb-6">
                            <div class="flex flex-col gap-3">
                                <span class="inline-flex px-4 py-1.5 rounded-full bg-slate-50 text-slate-500 text-[10px] font-black uppercase tracking-[0.2em] border border-slate-100 shadow-sm">
                                    {{ station.brand|default('Tankstelle') }}
                                </span>
                                <button
                                    data-favorite-toggle="{{ path('app_favorite_toggle', {uuid: station.uuid}) }}"
                                    class="favorite-btn inline-flex items-center justify-center w-12 h-12 rounded-2xl transition-all text-amber-400 bg-amber-50 shadow-inner"
                                    title="Von Favoriten entfernen"
                                >
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.54 1.118l-3.976-2.888a1 1 0 00-1.175 0l-3.976 2.888c-.784.57-1.838-.197-1.539-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z" />
                                    </svg>
                                </button>
                            </div>
                            <div class="flex items-center gap-2 px-3 py-1.5 bg-slate-50 rounded-full border border-slate-100 shadow-sm">
                                <span class="text-[10px] font-black uppercase tracking-widest {{ station.isOpen ? 'text-emerald-600' : 'text-red-600' }}">
                                    {{ station.isOpen ? 'Geöffnet' : 'Geschlossen' }}
                                </span>
                                <span class="w-2.5 h-2.5 rounded-full {{ station.isOpen ? 'bg-emerald-500 shadow-[0_0_8px_rgba(16,185,129,0.5)]' : 'bg-red-500 shadow-[0_0_8px_rgba(239,68,68,0.5)]' }} animate-pulse"></span>
                            </div>
                        </div>

                        <h2 class="text-2xl font-black text-slate-900 mb-2 group-hover:text-blue-600 transition-colors leading-tight">
                            <a href="{{ path('app_station_detail', {'uuid': station.uuid}) }}">
                                {{ station.name }}
                            </a>
                        </h2>

                        <p class="text-sm text-slate-400 mb-8 font-medium line-clamp-2">
                            {{ station.street }} {{ station.houseNumber }}<br>
                            {{ station.postCode }} {{ station.place }}
                        </p>
                    </div>

                    <a href="{{ path('app_station_detail', {'uuid': station.uuid}) }}" class="flex items-center justify-center gap-2 py-6 bg-slate-50 text-[11px] font-black text-slate-400 hover:bg-slate-900 hover:text-white transition-all border-t border-slate-100 uppercase tracking-[0.3em]">
                        Details ansehen
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                        </svg>
                    </a>
                </div>
            {% else %}
                <div class="col-span-full py-24 text-center">
                    <div class="inline-flex items-center justify-center w-28 h-28 rounded-[2rem] bg-slate-100 text-slate-300 mb-8 text-5xl shadow-inner">
                        ⭐
                    </div>
                    <h3 class="text-2xl font-black text-slate-900 mb-3">Noch keine Favoriten</h3>
                    <p class="text-slate-500 font-medium max-w-sm mx-auto mb-10">Markieren Sie Tankstellen als Favoriten, um sie hier schnell wiederzufinden.</p>
                    <a href="{{ path('app_home') }}" class="inline-block px-10 py-4.5 bg-slate-900 text-white rounded-2xl font-black text-sm uppercase tracking-widest hover:bg-blue-600 transition-all shadow-xl shadow-slate-200">
                        Jetzt suchen
                    </a>
                </div>
            {% endfor %}
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            document.querySelectorAll('.favorite-btn').forEach(btn => {
                btn.addEventListener('click', async (e) => {
                    e.preventDefault();
                    const url = btn.dataset.favoriteToggle;

                    try {
                        const response = await fetch(url, {
                            method: 'POST',
                            headers: {
                                'X-Requested-With': 'XMLHttpRequest'
                            }
                        });

                        if (response.ok) {
                            const data = await response.json();
                            if (!data.isFavorite) {
                                // In the list view, we might want to remove the element or just update the UI
                                // For simplicity, we refresh the page if it's the favorites list
                                window.location.reload();
                            }
                        }
                    } catch (error) {
                        console.error('Error toggling favorite:', error);
                    }
                });
            });
        });
    </script>
{% endblock %}
