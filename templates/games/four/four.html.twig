{% extends 'base.html.twig' %}

{% block title %}4 zu Gewinnen{% endblock %}

{% block body %}
    <div class="py-4 flex justify-center">
    <div class="w-1/4 flex flex-col" {{ stimulus_controller('four') }}>
        <div class="pt-[15%]">
            <div id="board" class="w-full aspect-[7/6] grid grid-cols-7 grid-rows-6 shadow-[6px_6px_10px_hsla(0,0%,98%,0.7)] bg-blue-800" {{ stimulus_target('four', 'board') }}>
            </div>
        </div>
        <div class="flex items-center justify-center bg-black w-full">
            <div class="w-full h-[40px] bg-gradient-to-b from-[#4D9AF7] to-[#2870D6] rounded-lg relative shadow-lg">
            </div>
        </div>

        <div class="flex flex-col items-center justify-center">
            <!-- Player Turn -->
            <div class="flex items-center bg-white rounded-full px-4 py-2 shadow-lg mb-6">
                <div
                    class="flex items-center justify-center w-8 h-8 bg-[#F5A623] text-white rounded-full text-sm font-bold">
                    J
                </div>
                <p class="mx-2 text-sm font-medium text-black dark:text-gray-200">JÃ¶rg's turn</p>
                <div
                    class="flex items-center justify-center w-8 h-8 bg-[#F8E71C] text-white rounded-full text-sm font-bold">
                    J
                </div>
            </div>

            <!-- Connect Four Board -->
            <div class="relative hidden">
                <!-- Blue Board -->
                <div class="w-full aspect-ratio--1x1 bg-[#4D9AF7] rounded-lg grid grid-cols-7 grid-rows-6 gap-2 p-2">
                    <!-- Circles -->
                    <div class="w-[40px] h-[40px] bg-black rounded-full border-[3px] border-[#2870D6]"></div>
                    <div class="w-[20px] h-[20px] bg-black rounded-full border-[3px] border-[#2870D6]"></div>
                    <div class="w-[20px] h-[20px] bg-black rounded-full border-[3px] border-[#2870D6]"></div>
                    <div class="w-[20px] h-[20px] bg-black rounded-full border-[3px] border-[#2870D6]"></div>
                    <div class="w-[20px] h-[20px] bg-black rounded-full border-[3px] border-[#2870D6]"></div>
                    <div class="w-[20px] h-[20px] bg-black rounded-full border-[3px] border-[#2870D6]"></div>
                    <div class="w-[20px] h-[20px] bg-black rounded-full border-[3px] border-[#2870D6]"></div>

                    <!-- Repeat circles for rows -->
                    <!-- Total: 6 rows * 7 columns = 42 circles -->
                    <div class="w-[20px] h-[20px] bg-black rounded-full border-[3px] border-[#2870D6]"></div>
                    <div class="w-[20px] h-[20px] bg-black rounded-full border-[3px] border-[#2870D6]"></div>
                    <div class="w-[20px] h-[20px] bg-black rounded-full border-[3px] border-[#2870D6]"></div>
                    <div class="w-[20px] h-[20px] bg-black rounded-full border-[3px] border-[#2870D6]"></div>
                    <div class="w-[20px] h-[20px] bg-black rounded-full border-[3px] border-[#2870D6]"></div>
                    <div class="w-[20px] h-[20px] bg-black rounded-full border-[3px] border-[#2870D6]"></div>
                    <div class="w-[20px] h-[20px] bg-black rounded-full border-[3px] border-[#2870D6]"></div>

                    <!-- Repeat above for remaining 4 rows -->
                    <!-- Add all the required circle divs to match the 42 total circles -->
                    <div class="w-[20px] h-[20px] bg-black rounded-full border-[3px] border-[#2870D6]"></div>
                </div>

                <!-- Blue Base -->
                <div
                    class="absolute bottom-[-15px] left-1/2 transform -translate-x-1/2 w-[225px] h-[20px] bg-[#2870D6] rounded-[0px_0px_8px_8px] shadow-lg"></div>
            </div>
        </div>

        <div class="relative z-10 hidden" aria-labelledby="modal-title" role="dialog"
             aria-modal="true" {{ stimulus_target('four', 'modalContainer') }}>
            <!--
              Background backdrop, show/hide based on modal state.

              Entering: "ease-out duration-300"
                From: "opacity-0"
                To: "opacity-100"
              Leaving: "ease-in duration-200"
                From: "opacity-100"
                To: "opacity-0"
            -->
            <div class="fixed inset-0 bg-gray-900/75 transition-opacity" aria-hidden="true"></div>

            <div class="fixed inset-0 z-10 w-screen overflow-y-auto">
                <div class="flex min-h-full items-end justify-center p-4 text-center sm:items-center sm:p-0">
                    <!--
                      Modal panel, show/hide based on modal state.

                      Entering: "ease-out duration-300"
                        From: "opacity-0 translate-y-4 sm:translate-y-0 sm:scale-95"
                        To: "opacity-100 translate-y-0 sm:scale-100"
                      Leaving: "ease-in duration-200"
                        From: "opacity-100 translate-y-0 sm:scale-100"
                        To: "opacity-0 translate-y-4 sm:translate-y-0 sm:scale-95"
                    -->
                    <div
                        class="relative transform overflow-hidden rounded-lg bg-white dark:bg-gray-900 px-4 pb-4 pt-5 text-left shadow-xl transition-all sm:my-8 sm:w-full sm:max-w-sm sm:p-6">
                        <div>
                            <div class="mx-auto flex size-12 items-center justify-center rounded-full bg-green-100">
                                <svg class="size-6 text-green-600" fill="none" viewBox="0 0 24 24" stroke-width="1.5"
                                     stroke="currentColor" aria-hidden="true" data-slot="icon">
                                    <path stroke-linecap="round" stroke-linejoin="round" d="m4.5 12.75 6 6 9-13.5"/>
                                </svg>
                            </div>
                            <div class="mt-3 text-center sm:mt-5">
                                <h3 class="text-base font-semibold text-gray-900 dark:text-gray-200" id="modal-title">
                                    GEWONNEN</h3>
                                <div class="mt-2 dark:text-gray-200" {{ stimulus_target('four', 'modalMessage') }}>
                                </div>
                            </div>
                        </div>
                        <div class="mt-5 sm:mt-6">
                            <button type="button"
                                    class="inline-flex w-full justify-center rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600" {{ stimulus_target('four', 'resetButton') }}>
                                OK
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div id="small-modal" tabindex="-1"
             class="fixed top-0 left-1/2 right-1/2 z-50 hidden w-full p-4 overflow-x-hidden overflow-y-auto md:inset-0 h-[calc(100%-1rem)] max-h-full">
            <div class="relative w-full max-w-md max-h-full">
                <!-- Modal content -->
                <div class="relative bg-white rounded-lg shadow dark:bg-gray-700">
                    <!-- Modal header -->
                    <div class="flex items-center justify-between p-4 md:p-5 border-b rounded-t dark:border-gray-600">
                        <h3 class="text-xl font-medium text-gray-900 dark:text-white">
                            4 Gewinnt
                        </h3>
                        <button type="button"
                                class="text-gray-400 bg-transparent hover:bg-gray-200 hover:text-gray-900 rounded-lg text-sm w-8 h-8 ms-auto inline-flex justify-center items-center dark:hover:bg-gray-600 dark:hover:text-white"
                                data-modal-hide="small-modal">
                            <svg class="w-3 h-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none"
                                 viewBox="0 0 14 14">
                                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round"
                                      stroke-width="2" d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6"></path>
                            </svg>
                            <span class="sr-only">Close modal</span>
                        </button>
                    </div>
                    <!-- Modal body -->
                    <div class="p-4 md:p-5 space-y-4" {{ stimulus_target('four', 'modalMessage') }}>

                    </div>
                    <!-- Modal footer -->
                    <div class="flex items-center p-4 md:p-5 border-t border-gray-200 rounded-b dark:border-gray-600">
                        <button data-modal-hide="small-modal" type="button"
                                class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800">
                            ok
                        </button>
                        <button data-modal-hide="small-modal" type="button"
                                class="py-2.5 px-5 ms-3 text-sm font-medium text-gray-900 focus:outline-none bg-white rounded-lg border border-gray-200 hover:bg-gray-100 hover:text-blue-700 focus:z-10 focus:ring-4 focus:ring-gray-100 dark:focus:ring-gray-700 dark:bg-cyan-950 dark:text-gray-400 dark:border-gray-600 dark:hover:text-white dark:hover:bg-gray-700">
                            Decline
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>
{% endblock %}

