{% extends 'base.html.twig' %}

{% block title %}{{ station.name }} - Details{% endblock %}

{% block body %}
    <div class="min-h-screen bg-gray-50 py-8">
        <div class="container mx-auto px-4 max-w-4xl">
            <a href="{{ path('app_home') }}" class="inline-flex items-center text-sm font-medium text-blue-600 hover:text-blue-800 transition-colors mb-6">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
                </svg>
                Zur√ºck zur √úbersicht
            </a>

            <div class="bg-white rounded-3xl shadow-xl overflow-hidden border border-gray-100">
                {# Header Section #}
                <div class="relative bg-gradient-to-r from-blue-600 to-indigo-700 p-8 md:p-12 text-white">
                    <div class="relative z-10">
                        <div class="flex flex-wrap items-center justify-between gap-4">
                            <div>
                                <span class="inline-block px-3 py-1 rounded-full bg-white/20 backdrop-blur-sm text-xs font-semibold uppercase tracking-wider mb-3">
                                    {{ station.brand|default('Tankstelle') }}
                                </span>
                                <h1 class="text-4xl md:text-5xl font-black tracking-tight mb-2">{{ station.name }}</h1>
                                <div class="flex items-center text-blue-100 italic">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 opacity-80" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                                    </svg>
                                    {{ station.street }} {{ station.houseNumber }}, {{ station.postCode }} {{ station.place }}
                                </div>
                            </div>
                            <div class="flex flex-col items-end">
                                <div class="px-4 py-2 rounded-2xl {{ station.isOpen ? 'bg-green-400/20 border border-green-400/50 text-green-100' : 'bg-red-400/20 border border-red-400/50 text-red-100' }} backdrop-blur-md flex items-center">
                                    <span class="relative flex h-3 w-3 mr-3">
                                        <span class="animate-ping absolute inline-flex h-full w-full rounded-full {{ station.isOpen ? 'bg-green-400' : 'bg-red-400' }} opacity-75"></span>
                                        <span class="relative inline-flex rounded-full h-3 w-3 {{ station.isOpen ? 'bg-green-400' : 'bg-red-400' }}"></span>
                                    </span>
                                    <span class="font-bold uppercase text-sm tracking-widest">{{ station.isOpen ? 'Jetzt Ge√∂ffnet' : 'Aktuell Geschlossen' }}</span>
                                </div>
                                {% if station.stationDetail and station.stationDetail.state %}
                                    <p class="mt-2 text-xs text-blue-200 font-medium">Status: {{ station.stationDetail.state }}</p>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                    {# Decorative background element #}
                    <div class="absolute top-0 right-0 -mt-20 -mr-20 w-64 h-64 bg-white/10 rounded-full blur-3xl"></div>
                </div>

                <div class="p-8 md:p-12">
                    <div class="grid grid-cols-1 lg:grid-cols-12 gap-12">

                        {# Left Column: Prices #}
                        <div class="lg:col-span-5">
                            <h2 class="text-2xl font-bold text-gray-900 mb-6 flex items-center">
                                <span class="w-8 h-8 rounded-lg bg-blue-100 text-blue-600 flex items-center justify-center mr-3">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                                        <path d="M8.433 7.418c.155-.103.346-.196.567-.267v1.698a2.305 2.305 0 01-.567-.267C8.07 8.34 8 8.114 8 8c0-.114.07-.34.433-.582zM11 12.849v-1.698c.22.071.412.164.567.267.363.242.433.468.433.582 0 .114-.07.34-.433.582a2.305 2.305 0 01-.567.267z" />
                                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-13a1 1 0 10-2 0v.092a4.535 4.535 0 00-1.676.662C6.602 6.234 6 7.009 6 8c0 .99.602 1.765 1.324 2.246.48.32 1.054.545 1.676.662v1.184a4.535 4.535 0 00-1.676.662C6.602 13.234 6 14.009 6 15c0 .99.602 1.765 1.324 2.246A1 1 0 008 16v-.092c.535-.053 1.036-.201 1.488-.423.447.225.942.373 1.468.423V16a1 1 0 102 0v-.092a4.535 4.535 0 001.676-.662C15.398 14.766 16 13.991 16 13c0-.99-.602-1.765-1.324-2.246A4.535 4.535 0 0013 10.092V8.908a4.535 4.535 0 001.676-.662C15.398 7.234 16 6.459 16 5.5c0-.99-.602-1.765-1.324-2.246A1 1 0 0013 4v.092a4.535 4.535 0 00-1.676-.662A1 1 0 0011 3v1.092a4.535 4.535 0 00-1.488.423A4.535 4.535 0 008 5.092V4a1 1 0 10-2 0v.092a4.535 4.535 0 00-1.676.662A1 1 0 005 6v10a1 1 0 102 0v-.092a4.535 4.535 0 001.676-.662A1 1 0 0010 14v1.092c.535-.053 1.036-.201 1.488-.423.447.225.942.373 1.468.423V15a1 1 0 102 0v-.092a4.535 4.535 0 001.676-.662c.722-.481 1.324-1.256 1.324-2.246 0-.99-.602-1.765-1.324-2.246a4.535 4.535 0 00-1.676-.662V8.908c.535.053 1.036.201 1.488.423.447-.225.942-.373 1.468-.423V9a1 1 0 102 0v-.092a4.535 4.535 0 001.676-.662c.722-.481 1.324-1.256 1.324-2.246 0-.99-.602-1.765-1.324-2.246A4.535 4.535 0 0013 3.092V4a1 1 0 10-2 0z" clip-rule="evenodd" />
                                    </svg>
                                </span>
                                Aktuelle Preise
                            </h2>

                            <div class="space-y-4">
                                {% set fuels = [
                                    {'name': 'Super E5', 'value': station.e5, 'color': 'from-blue-500 to-blue-600'},
                                    {'name': 'Super E10', 'value': station.e10, 'color': 'from-indigo-500 to-indigo-600'},
                                    {'name': 'Diesel', 'value': station.diesel, 'color': 'from-slate-700 to-slate-800'}
                                ] %}

                                {% for fuel in fuels %}
                                    <div class="flex items-center justify-between p-4 rounded-2xl bg-gray-50 border border-gray-100 hover:border-blue-200 transition-all group">
                                        <span class="text-lg font-bold text-gray-700">{{ fuel.name }}</span>
                                        <div class="flex items-baseline">
                                            {% if fuel.value %}
                                                {% set parts = fuel.value|split('.') %}
                                                <span class="text-3xl font-black text-gray-900 group-hover:text-blue-600 transition-colors">
                                                    {{ parts[0] }},{{ parts[1]|slice(0, 2) }}<span class="text-lg ml-0.5">{{ parts[1]|slice(2, 1) }}</span>
                                                </span>
                                                <span class="ml-1 text-sm font-bold text-gray-400">‚Ç¨</span>
                                            {% else %}
                                                <span class="text-gray-400 font-medium">N/A</span>
                                            {% endif %}
                                        </div>
                                    </div>
                                {% endfor %}
                            </div>

                            <p class="mt-4 text-xs text-gray-400 italic text-center">
                                Alle Angaben ohne Gew√§hr. Stand: {{ "now"|date("H:i") }} Uhr
                            </p>
                        </div>

                        {# Right Column: Opening Hours & Extra Info #}
                        <div class="lg:col-span-7">
                            {% if station.stationDetail %}
                                <h2 class="text-2xl font-bold text-gray-900 mb-6 flex items-center">
                                    <span class="w-8 h-8 rounded-lg bg-indigo-100 text-indigo-600 flex items-center justify-center mr-3">
                                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                                            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd" />
                                        </svg>
                                    </span>
                                    √ñffnungszeiten
                                </h2>

                                <div class="bg-gray-50 rounded-2xl p-6 border border-gray-100">
                                    {% if station.stationDetail.wholeDay %}
                                        <div class="flex items-center justify-center py-8">
                                            <div class="text-center">
                                                <span class="text-4xl mb-2 block">üïí</span>
                                                <p class="text-xl font-bold text-gray-900">24 Stunden ge√∂ffnet</p>
                                                <p class="text-sm text-gray-500">Diese Station hat rund um die Uhr f√ºr Sie ge√∂ffnet.</p>
                                            </div>
                                        </div>
                                    {% else %}
                                        <div class="space-y-3">
                                            {% for time in station.stationDetail.openingTimeObjects %}
                                                <div class="flex justify-between items-center py-2 border-b border-gray-200 last:border-0">
                                                    <span class="font-semibold text-gray-700">{{ time.text }}</span>
                                                    <span class="font-mono bg-white px-3 py-1 rounded-lg border border-gray-100 shadow-sm text-gray-600">
                                                        {{ time.start }} - {{ time.end }}
                                                    </span>
                                                </div>
                                            {% endfor %}
                                        </div>
                                    {% endif %}

                                    {% if station.stationDetail.overrides and station.stationDetail.overrides|length > 0 %}
                                        <div class="mt-8 pt-6 border-t border-gray-200">
                                            <h3 class="text-sm font-bold text-gray-400 uppercase tracking-widest mb-4">Sonder√∂ffnungszeiten</h3>
                                            <ul class="space-y-3">
                                                {% for override in station.stationDetail.overrides %}
                                                    <li class="flex flex-col sm:flex-row sm:items-center gap-2 text-sm">
                                                        {% if override is iterable %}
                                                            <span class="font-bold text-gray-700 min-w-[140px]">{{ override.start }} bis {{ override.end }}:</span>
                                                            <div class="flex items-center gap-2">
                                                                {% if override.isOpen %}
                                                                    <span class="px-2 py-0.5 rounded-full bg-green-100 text-green-700 text-xs font-bold">Ge√∂ffnet</span>
                                                                    {% if override.openingTimes is defined and override.openingTimes|length > 0 %}
                                                                        <span class="text-gray-500 font-mono">({{ override.openingTimes|map(t => t.start ~ ' - ' ~ t.end)|join(', ') }})</span>
                                                                    {% endif %}
                                                                {% else %}
                                                                    <span class="px-2 py-0.5 rounded-full bg-red-100 text-red-700 text-xs font-bold">Geschlossen</span>
                                                                {% endif %}
                                                            </div>
                                                        {% else %}
                                                            <span class="text-gray-600 italic">{{ override }}</span>
                                                        {% endif %}
                                                    </li>
                                                {% endfor %}
                                            </ul>
                                        </div>
                                    {% endif %}
                                </div>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>

            <div class="mt-12 text-center text-gray-400 text-sm">
                <p>&copy; {{ "now"|date("Y") }} Tanker App - Alle Preise sind Endpreise inkl. MwSt.</p>
            </div>
        </div>
    </div>
{% endblock %}
