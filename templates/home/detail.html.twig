{% extends 'base.html.twig' %}

{% block title %}{{ station.name }} - Details{% endblock %}

{% block body %}
    <div class="min-h-screen bg-slate-50 py-12">
        <div class="container mx-auto px-4 max-w-5xl">
            <a href="{{ path('app_home') }}" class="group inline-flex items-center text-sm font-bold text-slate-500 hover:text-blue-600 transition-all mb-8">
                <div class="w-8 h-8 rounded-lg bg-white border border-slate-200 flex items-center justify-center mr-3 shadow-sm group-hover:border-blue-200 group-hover:bg-blue-50 transition-all">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
                    </svg>
                </div>
                Zur√ºck zur √úbersicht
            </a>

            <div class="bg-white rounded-[2.5rem] shadow-2xl shadow-slate-200/60 overflow-hidden border border-slate-100">
                {# Header Section #}
                <div class="relative bg-slate-900 p-8 md:p-16 text-white overflow-hidden">
                    <div class="absolute top-8 right-8 md:top-12 md:right-12 z-20">
                        <div class="px-6 py-3 rounded-2xl {{ station.isOpen ? 'bg-emerald-500/10 border border-emerald-500/30 text-emerald-400' : 'bg-red-500/10 border border-red-500/30 text-red-400' }} backdrop-blur-md flex items-center shadow-lg">
                            <span class="relative flex h-3 w-3 mr-4">
                                <span class="animate-ping absolute inline-flex h-full w-full rounded-full {{ station.isOpen ? 'bg-emerald-400' : 'bg-red-400' }} opacity-75"></span>
                                <span class="relative inline-flex rounded-full h-3 w-3 {{ station.isOpen ? 'bg-emerald-500' : 'bg-red-500' }}"></span>
                            </span>
                            <span class="font-black uppercase text-xs tracking-[0.2em]">{{ station.isOpen ? 'Ge√∂ffnet' : 'Geschlossen' }}</span>
                        </div>
                        {% if station.stationDetail and station.stationDetail.state %}
                            <p class="mt-4 text-xs text-slate-500 font-bold uppercase tracking-widest text-right">Status: {{ station.stationDetail.state }}</p>
                        {% endif %}
                    </div>
                    <div class="relative z-10">
                        <div class="flex flex-wrap items-start justify-between gap-8">
                            <div class="w-full">
                                <div class="flex items-center gap-3 mb-6">
                                    <span class="inline-block px-4 py-1.5 rounded-full bg-blue-600 text-[10px] font-black uppercase tracking-[0.2em] shadow-lg shadow-blue-500/20">
                                        {{ station.brand|default('Tankstelle') }}
                                    </span>
                                    {% if app.user %}
                                        <button
                                            data-favorite-toggle="{{ path('app_favorite_toggle', {uuid: station.uuid}) }}"
                                            class="favorite-btn inline-flex items-center gap-2 px-4 py-1.5 rounded-full transition-all {{ app.user.favorites.contains(station) ? 'text-amber-400 bg-white/10' : 'text-slate-400 bg-white/5 hover:bg-white/10 hover:text-white' }}"
                                            title="{{ app.user.favorites.contains(station) ? 'Von Favoriten entfernen' : 'Zu Favoriten hinzuf√ºgen' }}"
                                        >
                                            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="{{ app.user.favorites.contains(station) ? 'currentColor' : 'none' }}" viewBox="0 0 24 24" stroke="currentColor">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.54 1.118l-3.976-2.888a1 1 0 00-1.175 0l-3.976 2.888c-.784.57-1.838-.197-1.539-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z" />
                                            </svg>
                                            <span class="font-black uppercase text-[10px] tracking-widest favorite-label">
                                                {{ app.user.favorites.contains(station) ? 'Favorit' : 'Merken' }}
                                            </span>
                                        </button>
                                    {% endif %}
                                </div>
                                <h1 class="text-4xl md:text-6xl font-black tracking-tight mb-6 leading-tight max-w-4xl">{{ station.name }}</h1>
                                <div class="flex items-start text-slate-400 font-medium text-base md:text-lg max-w-md">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 mr-3 text-blue-500 shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                                    </svg>
                                    <span>{{ station.street }} {{ station.houseNumber }}<br>{{ station.postCode }} {{ station.place }}</span>
                                </div>
                            </div>
                        </div>
                    </div>
                    {# Decorative background element #}
                    <div class="absolute -bottom-24 -right-24 w-96 h-96 bg-blue-600/10 rounded-full blur-[100px]"></div>
                    <div class="absolute -top-24 -left-24 w-64 h-64 bg-indigo-600/10 rounded-full blur-[80px]"></div>
                </div>

                <div class="p-8 md:p-16">
                    <div class="grid grid-cols-1 lg:grid-cols-12 gap-12 md:gap-20">

                        {# Left Column: Prices #}
                        <div class="lg:col-span-5">
                            <div class="flex items-center gap-4 mb-10">
                                <div class="w-12 h-12 rounded-[1rem] bg-blue-50 text-blue-600 flex items-center justify-center shadow-inner">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                                    </svg>
                                </div>
                                <h2 class="text-2xl font-black text-slate-900 tracking-tight">Aktuelle Preise</h2>
                            </div>

                            <div class="grid grid-cols-1 gap-5">
                                {% set fuels = [
                                    {'key': 'e5', 'name': 'Super E5', 'value': station.e5},
                                    {'key': 'e10', 'name': 'Super E10', 'value': station.e10},
                                    {'key': 'diesel', 'name': 'Diesel', 'value': station.diesel}
                                ] %}

                                {% for fuel in fuels %}
                                    {% set isSelected = fuel.key == selected_fuel %}
                                    <div class="flex items-center justify-between p-6 rounded-[1.5rem] {{ isSelected ? 'bg-blue-600 text-white shadow-xl shadow-blue-200 border-transparent' : 'bg-slate-50 text-slate-900 border-slate-100 hover:bg-slate-100 transition-all' }} border group">
                                        <span class="text-[11px] font-black uppercase tracking-[0.2em] {{ isSelected ? 'opacity-80' : 'text-slate-400' }}">{{ fuel.name }}</span>
                                        <div class="flex items-baseline gap-1">
                                            {% if fuel.value %}
                                                {% set parts = fuel.value|split('.') %}
                                                <span class="text-4xl font-black tracking-tight">
                                                    {{ parts[0] }},{{ parts[1]|slice(0, 2) }}<span class="text-xl ml-0.5 opacity-60">{{ parts[1]|slice(2, 1) }}</span>
                                                </span>
                                                <span class="text-sm font-black opacity-40 ml-1">‚Ç¨</span>
                                            {% else %}
                                                <span class="text-slate-300 font-black">--</span>
                                            {% endif %}
                                        </div>
                                    </div>
                                {% endfor %}
                            </div>

                            <div class="mt-8 p-4 bg-slate-50 rounded-2xl border border-slate-100 flex items-center gap-3">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-slate-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                                </svg>
                                <p class="text-[10px] text-slate-500 font-bold uppercase tracking-widest">
                                    Stand: {{ "now"|date("H:i") }} Uhr ‚Ä¢ Alle Angaben ohne Gew√§hr
                                </p>
                            </div>
                        </div>

                        {# Right Column: Opening Hours #}
                        <div class="lg:col-span-7">
                            {% if station.stationDetail %}
                                <div class="flex items-center gap-4 mb-10">
                                    <div class="w-12 h-12 rounded-[1rem] bg-indigo-50 text-indigo-600 flex items-center justify-center shadow-inner">
                                        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                                        </svg>
                                    </div>
                                    <h2 class="text-2xl font-black text-slate-900 tracking-tight">√ñffnungszeiten</h2>
                                </div>

                                <div class="bg-slate-50 rounded-[2rem] p-8 md:p-10 border border-slate-100 shadow-inner">
                                    {% if station.stationDetail.wholeDay %}
                                        <div class="flex flex-col items-center justify-center py-10 text-center">
                                            <div class="w-20 h-20 bg-white rounded-[2rem] shadow-xl shadow-slate-200/50 flex items-center justify-center text-4xl mb-6">üïí</div>
                                            <p class="text-2xl font-black text-slate-900 mb-2">24/7 Ge√∂ffnet</p>
                                            <p class="text-slate-500 font-medium">Diese Station hat rund um die Uhr f√ºr Sie ge√∂ffnet.</p>
                                        </div>
                                    {% else %}
                                        <div class="space-y-4">
                                            {% for time in station.stationDetail.openingTimeObjects %}
                                                <div class="flex justify-between items-center py-3 border-b border-slate-200/60 last:border-0 group">
                                                    <span class="font-bold text-slate-700 group-hover:text-blue-600 transition-colors">{{ time.text }}</span>
                                                    <div class="flex items-center gap-2">
                                                        <span class="font-black text-slate-900 bg-white px-4 py-2 rounded-xl border border-slate-100 shadow-sm text-sm">
                                                            {{ time.start|slice(0, 5) }} <span class="text-slate-300 mx-1">-</span> {{ time.end|slice(0, 5) }}
                                                        </span>
                                                    </div>
                                                </div>
                                            {% endfor %}
                                        </div>
                                    {% endif %}

                                    {% if station.stationDetail.overrides and station.stationDetail.overrides|length > 0 %}
                                        <div class="mt-12 pt-8 border-t border-slate-200">
                                            <h3 class="text-[11px] font-black text-slate-400 uppercase tracking-[0.2em] mb-6">Besondere Hinweise</h3>
                                            <div class="space-y-4">
                                                {% for override in station.stationDetail.overrides %}
                                                    <div class="bg-white p-5 rounded-2xl border border-slate-100 shadow-sm">
                                                        {% if override is iterable %}
                                                            <div class="flex flex-col md:flex-row md:items-center justify-between gap-4">
                                                                <span class="font-bold text-slate-900">
                                                                    {{ override.start|length > 10 ? override.start|slice(0, 16) : override.start }}
                                                                    bis
                                                                    {{ override.end|length > 10 ? override.end|slice(0, 16) : override.end }}
                                                                </span>
                                                                <div class="flex items-center gap-3">
                                                                    {% if override.isOpen %}
                                                                        <span class="px-3 py-1 rounded-full bg-emerald-50 text-emerald-600 text-[10px] font-black uppercase tracking-widest border border-emerald-100">Ge√∂ffnet</span>
                                                                        {% if override.openingTimes is defined and override.openingTimes|length > 0 %}
                                                                            <span class="text-slate-500 font-black text-xs">({{ override.openingTimes|map(t => t.start|slice(0, 5) ~ ' - ' ~ t.end|slice(0, 5))|join(', ') }})</span>
                                                                        {% endif %}
                                                                    {% else %}
                                                                        <span class="px-3 py-1 rounded-full bg-red-50 text-red-600 text-[10px] font-black uppercase tracking-widest border border-red-100">Geschlossen</span>
                                                                    {% endif %}
                                                                </div>
                                                            </div>
                                                        {% else %}
                                                            <span class="text-slate-600 font-medium italic">{{ override }}</span>
                                                        {% endif %}
                                                    </div>
                                                {% endfor %}
                                            </div>
                                        </div>
                                    {% endif %}
                                </div>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            document.querySelectorAll('.favorite-btn').forEach(btn => {
                btn.addEventListener('click', async (e) => {
                    e.preventDefault();
                    const url = btn.dataset.favoriteToggle;

                    try {
                        const response = await fetch(url, {
                            method: 'POST',
                            headers: {
                                'X-Requested-With': 'XMLHttpRequest'
                            }
                        });

                        if (response.ok) {
                            const data = await response.json();
                            const svg = btn.querySelector('svg');
                            const label = btn.querySelector('.favorite-label');

                            if (data.isFavorite) {
                                btn.classList.remove('text-blue-100', 'bg-white/10');
                                btn.classList.add('text-yellow-400', 'bg-white/20');
                                svg.setAttribute('fill', 'currentColor');
                                btn.title = 'Von Favoriten entfernen';
                                if (label) label.textContent = 'Favorit';
                            } else {
                                btn.classList.remove('text-yellow-400', 'bg-white/20');
                                btn.classList.add('text-blue-100', 'bg-white/10');
                                svg.setAttribute('fill', 'none');
                                btn.title = 'Zu Favoriten hinzuf√ºgen';
                                if (label) label.textContent = 'Zu Favoriten';
                            }
                        }
                    } catch (error) {
                        console.error('Error toggling favorite:', error);
                    }
                });
            });
        });
    </script>
{% endblock %}
