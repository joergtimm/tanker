{% extends 'base.html.twig' %}

{% block title %}Tankstellen in der Nähe{% endblock %}

{% block body %}
<div class="min-h-screen bg-gray-50 py-12">
    <div class="container mx-auto px-4 max-w-6xl">
        <header class="mb-12">
            <h1 class="text-4xl md:text-5xl font-black text-gray-900 tracking-tight mb-4">Tankstellen in der Nähe</h1>
            <p class="text-lg text-gray-600 font-medium">Finden Sie die besten Preise im Umkreis von <span class="text-blue-600 font-bold">{{ current_radius }} km</span></p>
        </header>

        <div class="mb-12 p-8 bg-white rounded-3xl shadow-xl border border-gray-100">
            <form method="get" action="{{ path('app_home') }}" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 items-end">
                <div>
                    <label for="lat" class="block text-xs font-bold text-gray-400 uppercase tracking-widest mb-2">Breitengrad</label>
                    <input type="text" id="lat" name="lat" value="{{ current_lat }}"
                           class="w-full px-4 py-3 bg-gray-50 border border-gray-200 rounded-2xl focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all outline-none text-gray-700 font-medium">
                </div>
                <div>
                    <label for="lng" class="block text-xs font-bold text-gray-400 uppercase tracking-widest mb-2">Längengrad</label>
                    <input type="text" id="lng" name="lng" value="{{ current_lng }}"
                           class="w-full px-4 py-3 bg-gray-50 border border-gray-200 rounded-2xl focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all outline-none text-gray-700 font-medium">
                </div>
                <div class="lg:col-span-2">
                    <label for="rad" class="block text-xs font-bold text-gray-400 uppercase tracking-widest mb-2">Umkreis: <span class="text-blue-600">{{ current_radius }} km</span></label>
                    <div class="flex items-center gap-6 bg-gray-50 px-4 py-3 border border-gray-200 rounded-2xl">
                        <input type="range" id="rad" name="rad" min="1.5" max="25" step="0.5" value="{{ current_radius }}"
                               class="flex-grow h-2 bg-gray-200 rounded-lg appearance-none cursor-pointer accent-blue-600"
                               oninput="this.closest('div').previousElementSibling.querySelector('span').textContent = this.value + ' km'">
                    </div>
                </div>

                <div class="lg:col-span-3">
                    <span class="block text-xs font-bold text-gray-400 uppercase tracking-widest mb-3">Kraftstoffarten</span>
                    <div class="flex flex-wrap gap-4">
                        {% for fuel in ['diesel', 'e5', 'e10'] %}
                            <label class="relative flex items-center group cursor-pointer">
                                <input type="checkbox" name="fuels[]" value="{{ fuel }}" {% if fuel in selected_fuels %}checked{% endif %} class="sr-only peer">
                                <div class="px-6 py-2 rounded-xl border-2 border-gray-100 bg-white peer-checked:border-blue-500 peer-checked:bg-blue-50 peer-checked:text-blue-700 hover:border-blue-200 transition-all font-bold text-gray-500 uppercase text-xs tracking-widest">
                                    {{ fuel }}
                                </div>
                            </label>
                        {% endfor %}
                    </div>
                </div>

                <div class="lg:col-span-1">
                    <button type="submit" class="w-full py-3.5 bg-blue-600 text-white rounded-2xl font-bold hover:bg-blue-700 transition-all shadow-lg shadow-blue-200 active:scale-95 flex items-center justify-center gap-2">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                            <path fill-rule="evenodd" d="M4 2a1 1 0 011 1v2.101a7.002 7.002 0 0111.601 2.566 1 1 0 11-1.885.666A5.002 5.002 0 005.999 7H9a1 1 0 010 2H4a1 1 0 01-1-1V3a1 1 0 011-1zm.008 9.057a1 1 0 011.276.61A5.002 5.002 0 0014.001 13H11a1 1 0 110-2h5a1 1 0 011 1v5a1 1 0 11-2 0v-2.101a7.002 7.002 0 01-11.601-2.566 1 1 0 01.61-1.276z" clip-rule="evenodd" />
                        </svg>
                        Aktualisieren
                    </button>
                </div>
            </form>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-3 gap-6">
            {% for station in stations %}
                <div class="group bg-white rounded-3xl shadow-sm hover:shadow-xl transition-all duration-300 border border-gray-100 overflow-hidden flex flex-col">
                    <div class="p-6 flex-grow">
                        <div class="flex justify-between items-start mb-4">
                            <span class="inline-block px-3 py-1 rounded-lg bg-gray-50 text-gray-500 text-[10px] font-black uppercase tracking-widest border border-gray-100">
                                {{ station.brand|default('Tankstelle') }}
                            </span>
                            <div class="flex items-center gap-2">
                                <span class="text-xs font-bold text-gray-400 flex items-center">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-3.5 w-3.5 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                                    </svg>
                                    {{ station.distance }} km
                                </span>
                                {% if station.isOpen %}
                                    <span class="w-2 h-2 rounded-full bg-green-500"></span>
                                {% else %}
                                    <span class="w-2 h-2 rounded-full bg-red-500"></span>
                                {% endif %}
                            </div>
                        </div>

                        <h2 class="text-xl font-bold text-gray-900 mb-2 group-hover:text-blue-600 transition-colors">
                            <a href="{{ path('app_station_detail', {'uuid': station.uuid}) }}">
                                {{ station.name }}
                            </a>
                        </h2>

                        <p class="text-sm text-gray-500 mb-6 line-clamp-2">
                            {{ station.street }} {{ station.houseNumber }}, {{ station.postCode }} {{ station.place }}
                        </p>

                        <div class="space-y-3">
                            {% if 'diesel' in selected_fuels %}
                                <div class="flex justify-between items-center p-3 rounded-2xl bg-gray-50 border border-transparent group-hover:border-gray-100 transition-all">
                                    <span class="text-xs font-bold text-gray-400 uppercase">Diesel</span>
                                    <span class="text-lg font-black text-gray-900">
                                        {{ station.diesel ? station.diesel|number_format(3, ',', '.') : '--' }}<span class="text-xs ml-0.5 text-gray-400">€</span>
                                    </span>
                                </div>
                            {% endif %}
                            {% if 'e5' in selected_fuels %}
                                <div class="flex justify-between items-center p-3 rounded-2xl bg-blue-50/30 border border-transparent group-hover:border-blue-100 transition-all">
                                    <span class="text-xs font-bold text-blue-400 uppercase">Super E5</span>
                                    <span class="text-lg font-black text-blue-700">
                                        {{ station.e5 ? station.e5|number_format(3, ',', '.') : '--' }}<span class="text-xs ml-0.5 text-blue-400">€</span>
                                    </span>
                                </div>
                            {% endif %}
                            {% if 'e10' in selected_fuels %}
                                <div class="flex justify-between items-center p-3 rounded-2xl bg-indigo-50/30 border border-transparent group-hover:border-indigo-100 transition-all">
                                    <span class="text-xs font-bold text-indigo-400 uppercase">Super E10</span>
                                    <span class="text-lg font-black text-indigo-700">
                                        {{ station.e10 ? station.e10|number_format(3, ',', '.') : '--' }}<span class="text-xs ml-0.5 text-indigo-400">€</span>
                                    </span>
                                </div>
                            {% endif %}
                        </div>
                    </div>

                    <a href="{{ path('app_station_detail', {'uuid': station.uuid}) }}" class="block w-full py-4 bg-gray-50 text-center text-sm font-bold text-gray-600 hover:bg-blue-600 hover:text-white transition-all border-t border-gray-100 uppercase tracking-widest">
                        Details ansehen
                    </a>
                </div>
            {% else %}
                <div class="col-span-full py-20 text-center">
                    <div class="inline-flex items-center justify-center w-20 h-20 rounded-full bg-gray-100 text-gray-400 mb-4 text-3xl">⛽</div>
                    <h3 class="text-xl font-bold text-gray-900 mb-2">Keine Tankstellen gefunden</h3>
                    <p class="text-gray-500">Versuchen Sie es mit einem größeren Umkreis oder anderen Koordinaten.</p>
                </div>
            {% endfor %}
        </div>
    </div>
</div>
{% endblock %}
