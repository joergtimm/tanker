{% extends 'base.html.twig' %}

{% block title %}Profil{% endblock %}

{% block body %}
<div class="min-h-screen bg-gray-50 py-12">
    <div class="container mx-auto px-4 max-w-6xl">
        <header class="mb-12">
            <h1 class="text-4xl font-black text-gray-900 tracking-tight mb-4">Mein Profil</h1>
            <p class="text-lg text-gray-600 font-medium">Verwalten Sie Ihre persönlichen Daten und Adressen.</p>
        </header>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            <div class="md:col-span-1">
                <div class="bg-white rounded-3xl shadow-xl border border-gray-100 overflow-hidden h-full">
                    <div class="p-8">
                        <h2 class="text-2xl font-bold text-gray-900 mb-6">Benutzerdaten</h2>
                        <div class="space-y-6">
                            <div>
                                <span class="block text-xs font-bold text-gray-400 uppercase tracking-widest mb-1">E-Mail</span>
                                <p class="text-gray-900 font-medium break-all">{{ user.email }}</p>
                            </div>
                            <div>
                                <span class="block text-xs font-bold text-gray-400 uppercase tracking-widest mb-1">Status</span>
                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium {{ user.isVerified ? 'bg-green-100 text-green-800' : 'bg-yellow-100 text-yellow-800' }}">
                                    {{ user.isVerified ? 'Verifiziert' : 'Nicht verifiziert' }}
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="md:col-span-2">
                <div class="bg-white rounded-3xl shadow-xl border border-gray-100 overflow-hidden h-full">
                    <div class="p-8">
                        <div class="flex justify-between items-center mb-6">
                            <h2 class="text-2xl font-bold text-gray-900">Meine Adressen</h2>
                            <a href="{{ path('app_address_new') }}" class="px-6 py-2 bg-blue-600 text-white rounded-xl font-bold hover:bg-blue-700 transition-all shadow-lg shadow-blue-200 text-sm">
                                + Neue Adresse
                            </a>
                        </div>

                        {% if user.addresses is empty %}
                            <div class="text-center py-12 border-2 border-dashed border-gray-100 rounded-3xl">
                                <p class="text-gray-500 mb-4">Sie haben noch keine Adressen gespeichert.</p>
                                <p class="text-sm text-gray-400">Fügen Sie eine Adresse hinzu, um Tankstellen in Ihrer Nähe schneller zu finden.</p>
                            </div>
                        {% else %}
                            <div class="grid grid-cols-1 gap-4">
                                {% for address in user.addresses %}
                                    <div class="flex items-center justify-between p-6 bg-gray-50 rounded-2xl border border-transparent hover:border-blue-100 transition-all group">
                                        <div>
                                            <h3 class="font-bold text-gray-900 group-hover:text-blue-600 transition-colors">{{ address.name }}</h3>
                                            <p class="text-sm text-gray-500">{{ address.street }}, {{ address.postCode }} {{ address.city }}</p>
                                            <p class="text-[10px] text-gray-400 mt-1 uppercase tracking-widest">{{ address.lat }}, {{ address.lng }}</p>
                                        </div>
                                        <div class="flex items-center gap-2">
                                            <a href="{{ path('app_address_edit', {id: address.id}) }}" class="p-2 text-gray-400 hover:text-blue-600 transition-colors">
                                                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                                                </svg>
                                            </a>
                                            <form method="post" action="{{ path('app_address_delete', {id: address.id}) }}" onsubmit="return confirm('Möchten Sie diese Adresse wirklich löschen?');">
                                                <button class="p-2 text-gray-400 hover:text-red-600 transition-colors">
                                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                                                    </svg>
                                                </button>
                                            </form>
                                        </div>
                                    </div>
                                {% endfor %}
                            </div>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
