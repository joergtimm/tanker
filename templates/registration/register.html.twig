{% extends 'base.html.twig' %}

{% block title %}Registrieren{% endblock %}

{% block body %}
<div class="min-h-screen bg-gray-50 flex flex-col justify-center py-12 sm:px-6 lg:px-8">
    <div class="sm:mx-auto sm:w-full sm:max-w-md">
        <h1 class="text-center text-3xl font-black text-gray-900 tracking-tight mb-8">Registrieren</h1>
    </div>

    <div class="mt-8 sm:mx-auto sm:w-full sm:max-w-md">
        <div class="bg-white py-8 px-4 shadow-xl border border-gray-100 rounded-3xl sm:px-10">
            {% for flash_error in app.flashes('verify_email_error') %}
                <div class="mb-4 p-4 rounded-2xl bg-red-50 border border-red-100 text-red-700 text-sm font-medium" role="alert">
                    {{ flash_error }}
                </div>
            {% endfor %}

            {{ form_start(registrationForm, {'attr': {'class': 'space-y-6'}}) }}
                <div>
                    <label for="{{ registrationForm.email.vars.id }}" class="block text-xs font-bold text-gray-400 uppercase tracking-widest mb-2">Email</label>
                    {{ form_widget(registrationForm.email, {
                        'attr': {
                            'class': 'w-full px-4 py-3 bg-gray-50 border border-gray-200 rounded-2xl focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all outline-none text-gray-700 font-medium',
                            'placeholder': 'ihre@email.de'
                        }
                    }) }}
                    {{ form_errors(registrationForm.email, {'attr': {'class': 'mt-1 text-red-500 text-xs'}}) }}
                </div>

                <div>
                    <label for="{{ registrationForm.plainPassword.vars.id }}" class="block text-xs font-bold text-gray-400 uppercase tracking-widest mb-2">Passwort</label>
                    {{ form_widget(registrationForm.plainPassword, {
                        'attr': {
                            'class': 'w-full px-4 py-3 bg-gray-50 border border-gray-200 rounded-2xl focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all outline-none text-gray-700 font-medium',
                            'placeholder': 'Passwort'
                        }
                    }) }}
                    {{ form_errors(registrationForm.plainPassword, {'attr': {'class': 'mt-1 text-red-500 text-xs'}}) }}
                </div>

                <div class="flex items-center">
                    {{ form_widget(registrationForm.agreeTerms, {
                        'attr': {
                            'class': 'h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded'
                        }
                    }) }}
                    <label for="{{ registrationForm.agreeTerms.vars.id }}" class="ml-2 block text-sm text-gray-900">
                        Ich akzeptiere die Nutzungsbedingungen
                    </label>
                </div>
                {{ form_errors(registrationForm.agreeTerms, {'attr': {'class': 'mt-1 text-red-500 text-xs'}}) }}

                <div>
                    <button type="submit" class="w-full py-3.5 bg-blue-600 text-white rounded-2xl font-bold hover:bg-blue-700 transition-all shadow-lg shadow-blue-200 active:scale-95 flex items-center justify-center gap-2">
                        Konto erstellen
                    </button>
                </div>

                <div class="mt-6 text-center">
                    <p class="text-sm text-gray-600">
                        Bereits ein Konto?
                        <a href="{{ path('app_login') }}" class="font-bold text-blue-600 hover:text-blue-500">
                            Hier anmelden
                        </a>
                    </p>
                </div>
            {{ form_end(registrationForm) }}
        </div>
    </div>
</div>
{% endblock %}
