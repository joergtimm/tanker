{% extends 'base.html.twig' %}

{% block title %}Registrieren{% endblock %}

{% block body %}
<div class="min-h-screen bg-slate-50 flex flex-col justify-center py-12 sm:px-6 lg:px-8">
    <div class="sm:mx-auto sm:w-full sm:max-w-md">
        <div class="flex justify-center mb-8">
            <div class="w-16 h-16 bg-blue-600 rounded-2xl flex items-center justify-center shadow-xl shadow-blue-200">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z" />
                </svg>
            </div>
        </div>
        <h1 class="text-center text-4xl font-black text-slate-900 tracking-tight mb-4">Konto erstellen</h1>
        <p class="text-center text-slate-500 font-medium mb-10">Starten Sie jetzt und finden Sie die besten Preise.</p>
    </div>

    <div class="sm:mx-auto sm:w-full sm:max-w-md">
        <div class="bg-white py-10 px-6 shadow-2xl shadow-slate-200/50 border border-slate-100 rounded-[2rem] sm:px-12">
            {% for flash_error in app.flashes('verify_email_error') %}
                <div class="mb-6 p-4 rounded-2xl bg-red-50 border border-red-100 text-red-700 text-sm font-bold flex items-center gap-3" role="alert">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                        <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
                    </svg>
                    {{ flash_error }}
                </div>
            {% endfor %}

            {{ form_start(registrationForm, {'attr': {'class': 'space-y-8'}}) }}
                <div>
                    <label for="{{ registrationForm.email.vars.id }}" class="block text-[11px] font-black text-slate-400 uppercase tracking-[0.2em] mb-3 ml-1">Email Adresse</label>
                    {{ form_widget(registrationForm.email, {
                        'attr': {
                            'class': 'w-full px-5 py-4 bg-slate-50 border border-slate-100 rounded-2xl focus:ring-4 focus:ring-blue-500/10 focus:bg-white focus:border-blue-500 transition-all outline-none text-slate-900 font-bold',
                            'placeholder': 'name@beispiel.de'
                        }
                    }) }}
                    {{ form_errors(registrationForm.email, {'attr': {'class': 'mt-2 ml-1 text-red-500 text-xs font-bold'}}) }}
                </div>

                <div>
                    <label for="{{ registrationForm.plainPassword.vars.id }}" class="block text-[11px] font-black text-slate-400 uppercase tracking-[0.2em] mb-3 ml-1">Passwort</label>
                    {{ form_widget(registrationForm.plainPassword, {
                        'attr': {
                            'class': 'w-full px-5 py-4 bg-slate-50 border border-slate-100 rounded-2xl focus:ring-4 focus:ring-blue-500/10 focus:bg-white focus:border-blue-500 transition-all outline-none text-slate-900 font-bold',
                            'placeholder': 'Min. 6 Zeichen'
                        }
                    }) }}
                    {{ form_errors(registrationForm.plainPassword, {'attr': {'class': 'mt-2 ml-1 text-red-500 text-xs font-bold'}}) }}
                </div>

                <div class="flex items-start">
                    <div class="flex items-center h-5">
                        {{ form_widget(registrationForm.agreeTerms, {
                            'attr': {
                                'class': 'h-5 w-5 text-blue-600 focus:ring-blue-500 border-slate-300 rounded-lg transition-all'
                            }
                        }) }}
                    </div>
                    <label for="{{ registrationForm.agreeTerms.vars.id }}" class="ml-3 block text-sm font-bold text-slate-700">
                        Ich akzeptiere die Nutzungsbedingungen und Datenschutzhinweise.
                    </label>
                </div>
                {{ form_errors(registrationForm.agreeTerms, {'attr': {'class': 'mt-2 ml-1 text-red-500 text-xs font-bold'}}) }}

                <div>
                    <button type="submit" class="w-full py-4.5 bg-slate-900 text-white rounded-2xl font-black text-sm uppercase tracking-widest hover:bg-blue-600 transition-all shadow-xl shadow-slate-200 active:scale-[0.98]">
                        Konto erstellen
                    </button>
                </div>

                <div class="pt-6 text-center border-t border-slate-100">
                    <p class="text-sm text-slate-500 font-medium">
                        Bereits ein Konto?
                        <a href="{{ path('app_login') }}" class="font-black text-blue-600 hover:text-blue-500 ml-1">
                            Hier anmelden
                        </a>
                    </p>
                </div>
            {{ form_end(registrationForm) }}
        </div>
    </div>
</div>
{% endblock %}
